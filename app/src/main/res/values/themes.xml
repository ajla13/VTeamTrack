<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VTeamTrack" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:titleTextStyle">@color/blue_dark_100</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/blue_dark_100</item>
        <item name="android:actionMenuTextColor">@color/blue_dark_100</item>
        <item name="android:textColor">@color/blue_dark_100</item>
        <item name="textFillColor">@color/blue_dark_100</item>
        <item name="android:windowBackground">@color/blue_light</item>
        <item name="recyclerViewStyle">@style/DefaultRecyclerViewStyle</item>

        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
    <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark_100</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="tabBackground">@drawable/tab</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/tirkiz</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">8sp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VTeamTrack.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/red_100</item>
        <item name="tabBackground">@color/red_100</item>
    </style>
    <style name="DefaultRecyclerViewStyle" parent="Theme.VTeamTrack">
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/border_list</item>
        <item name="android:textStyle">bold</item>
        <item name="textFillColor">@color/blue_dark_100</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="ThemeOverlay.BottomNavView" parent="Theme.VTeamTrack">
        <item name="textFillColor">@color/blue_dark_100</item>
        <item name="android:textColor">@color/blue_dark_100</item>
        <item name="itemBackground">@color/green_dark</item>
    </style>
    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/blue_dark_100</item>
    </style>

</resources>
